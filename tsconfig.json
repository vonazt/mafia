{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "lib": ["esnext.asynciterable"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "rules": {
    "typedef": [
      true,
      "call-signature",
      "property-declaration",
      "arrow-call-signature"
    ]
  },
  "include": ["graphql/*", "index.ts", "models/*", "DomainObjects/*"]
}